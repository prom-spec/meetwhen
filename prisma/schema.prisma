generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  username      String?   @unique
  timezone      String    @default("UTC")
  calendarSyncEnabled Boolean @default(true)
  blockHolidays   Boolean @default(false)
  holidayCountry  String? // ISO 3166-1 alpha-2 (e.g. "IL", "US")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  eventTypes    EventType[]
  bookings      Booking[]      @relation("host")
  availability  Availability[]
  dateOverrides DateOverride[]
  webhooks      Webhook[]
  apiKeys       ApiKey[]

  // Team relations
  ownedTeams    Team[]         @relation("teamOwner")
  teamMembers   TeamMember[]
}

model ApiKey {
  id         String    @id @default(cuid())
  keyHash    String    @unique
  keyPrefix  String    // First 8 chars for display (mk_xxxx)
  name       String
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime  @default(now())
  lastUsedAt DateTime?
  revokedAt  DateTime?

  @@index([userId])
  @@index([keyHash])
}

model EventType {
  id          String  @id @default(cuid())
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Optional team association
  teamId         String?
  team           Team?          @relation("teamEventTypes", fields: [teamId], references: [id], onDelete: Cascade)
  schedulingType SchedulingType @default(INDIVIDUAL)

  title       String
  slug        String
  description String?
  duration    Int
  color       String  @default("#3B82F6")
  location    String? // Deprecated: kept for backwards compatibility
  locationType  LocationType @default(GOOGLE_MEET)
  locationValue String?      // Address, phone number, or custom URL depending on locationType
  isActive    Boolean @default(true)

  bufferBefore Int @default(0)
  bufferAfter  Int @default(0)
  minNotice    Int @default(240)
  maxDaysAhead Int @default(60)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings  Booking[]
  pageViews PageView[]

  @@unique([userId, slug])
  @@unique([teamId, slug])
  @@index([userId])
  @@index([teamId])
}

model Availability {
  id        String @id @default(cuid())
  userId    String
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  dayOfWeek Int
  startTime String
  endTime   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, dayOfWeek, startTime])
  @@index([userId])
}

model DateOverride {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  date        DateTime @db.Date
  isAvailable Boolean  @default(false)
  startTime   String?
  endTime     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@index([userId])
}

model Booking {
  id          String      @id @default(cuid())
  eventTypeId String
  eventType   EventType   @relation(fields: [eventTypeId], references: [id], onDelete: Cascade)

  hostId String
  host   User   @relation("host", fields: [hostId], references: [id], onDelete: Cascade)

  guestName     String
  guestEmail    String
  guestTimezone String

  startTime DateTime
  endTime   DateTime

  status BookingStatus @default(CONFIRMED)
  notes  String?

  googleEventId String?
  meetingUrl    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([hostId])
  @@index([eventTypeId])
  @@index([startTime])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  PENDING_RESCHEDULE
}

enum LocationType {
  IN_PERSON
  GOOGLE_MEET
  ZOOM
  PHONE
  CUSTOM
}

enum SchedulingType {
  INDIVIDUAL
  ROUND_ROBIN
  COLLECTIVE
}

enum TeamMemberRole {
  OWNER
  ADMIN
  MEMBER
}

model Team {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  ownerId   String
  owner     User     @relation("teamOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  // Round-robin tracking
  lastAssignedMemberId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members    TeamMember[]
  eventTypes EventType[]  @relation("teamEventTypes")

  @@index([ownerId])
}

model TeamMember {
  id        String         @id @default(cuid())
  teamId    String
  team      Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId    String
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      TeamMemberRole @default(MEMBER)

  // For round-robin priority/weighting
  priority  Int            @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
}

model Webhook {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  url       String
  events    String[]
  secret    String
  active    Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deliveries WebhookDelivery[]

  @@index([userId])
}

model WebhookDelivery {
  id           String   @id @default(cuid())
  webhookId    String
  webhook      Webhook  @relation(fields: [webhookId], references: [id], onDelete: Cascade)

  event        String
  payload      Json
  status       DeliveryStatus @default(PENDING)
  responseCode Int?
  responseBody String?  @db.Text
  attempts     Int      @default(0)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([webhookId])
  @@index([createdAt])
}

enum DeliveryStatus {
  PENDING
  SUCCESS
  FAILED
}

model PageView {
  id          String   @id @default(cuid())
  eventTypeId String
  eventType   EventType @relation(fields: [eventTypeId], references: [id], onDelete: Cascade)
  
  // Funnel stage: view, slot_selected, booking_confirmed
  stage       String   @default("view")
  
  // Optional session tracking
  sessionId   String?
  
  createdAt   DateTime @default(now())

  @@index([eventTypeId])
  @@index([createdAt])
  @@index([stage])
}
