generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  email             String? // Email associated with this OAuth account

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  username      String?   @unique
  timezone      String    @default("UTC")
  calendarSyncEnabled Boolean @default(true)
  blockHolidays   Boolean @default(false)
  holidayCountry  String? // ISO 3166-1 alpha-2 (e.g. "IL", "US")
  // Branding
  brandColor     String?
  accentColor    String?
  brandLogo      String?
  hidePoweredBy  Boolean  @default(false)
  // Tracking
  gaTrackingId   String?
  metaPixelId    String?
  // Custom domain
  customDomain         String?   @unique
  customDomainVerified Boolean   @default(false)
  // Stripe Connect
  stripeAccountId          String?
  stripeOnboardingComplete Boolean @default(false)
  // Multi-account: preferred primary Google account ID (null = first linked)
  primaryAccountId         String?

  // Billing
  plan           String    @default("free") // "free", "pro", "enterprise"
  planUpdatedAt  DateTime?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  eventTypes    EventType[]
  bookings      Booking[]      @relation("host")
  availability  Availability[]
  dateOverrides DateOverride[]
  webhooks      Webhook[]
  apiKeys       ApiKey[]

  // Team relations
  ownedTeams    Team[]         @relation("teamOwner")
  teamMembers   TeamMember[]
  linkingTokens LinkingToken[]
  meetingPolls  MeetingPoll[]
  routingForms  RoutingForm[]
  workflows     Workflow[]
  emailSequences EmailSequence[]
}

model LinkingToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([userId])
}

model ApiKey {
  id         String    @id @default(cuid())
  keyHash    String    @unique
  keyPrefix  String    // First 8 chars for display (mk_xxxx)
  name       String
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime  @default(now())
  lastUsedAt DateTime?
  revokedAt  DateTime?

  @@index([userId])
  @@index([keyHash])
}

model EventType {
  id          String  @id @default(cuid())
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Optional team association
  teamId         String?
  team           Team?          @relation("teamEventTypes", fields: [teamId], references: [id], onDelete: Cascade)
  schedulingType SchedulingType @default(INDIVIDUAL)

  title       String
  slug        String
  description String?
  duration    Int
  color       String  @default("#3B82F6")
  location    String? // Deprecated: kept for backwards compatibility
  locationType  LocationType @default(GOOGLE_MEET)
  locationValue String?      // Address, phone number, or custom URL depending on locationType
  isActive    Boolean @default(true)

  bufferBefore Int @default(0)
  bufferAfter  Int @default(0)
  minNotice    Int @default(240)
  maxDaysAhead Int @default(60)

  allowRecurring    Boolean @default(false)
  recurrenceOptions String? // JSON array of allowed frequencies e.g. ["weekly_4","weekly_8","biweekly_4","monthly_3"]

  // Custom booking questions (JSON array of {id, label, type, required, options?})
  customQuestions String?
  // Screening/qualification questions (JSON array of {id, label, type:"text"|"select"|"checkbox", required, options?})
  screeningQuestions String?
  // Meeting limits
  maxBookingsPerDay  Int?
  maxBookingsPerWeek Int?
  // Redirect after booking
  redirectUrl String?
  // Visibility: "public" (shown on profile) or "unlisted" (direct link only)
  visibility String @default("public")
  // Group events: max attendees per slot (1 = one-on-one)
  maxAttendees Int @default(1)
  // Payment
  price    Int?    // Price in cents (null = free)
  currency String  @default("USD")

  // Cancellation policy (shown on booking page)
  cancellationPolicy String?
  // Custom confirmation page links (JSON array of {label, url})
  confirmationLinks  String?

  // Multi-account: which Google account to use for calendar events (null = primary)
  calendarAccountId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings  Booking[]
  pageViews PageView[]

  @@unique([userId, slug])
  @@unique([teamId, slug])
  @@index([userId])
  @@index([teamId])
}

model Availability {
  id        String @id @default(cuid())
  userId    String
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  dayOfWeek Int
  startTime String
  endTime   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, dayOfWeek, startTime])
  @@index([userId])
}

model DateOverride {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  date        DateTime @db.Date
  isAvailable Boolean  @default(false)
  startTime   String?
  endTime     String?
  reason      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@index([userId])
}

model Booking {
  id          String      @id @default(cuid())
  eventTypeId String
  eventType   EventType   @relation(fields: [eventTypeId], references: [id], onDelete: Cascade)

  hostId String
  host   User   @relation("host", fields: [hostId], references: [id], onDelete: Cascade)

  guestName     String
  guestEmail    String
  guestTimezone String

  startTime DateTime
  endTime   DateTime

  status BookingStatus @default(CONFIRMED)
  notes  String?

  recurrenceRule     String? // e.g. "weekly_4", "biweekly_4", "monthly_3"
  recurrenceParentId String?
  recurrenceParent   Booking?  @relation("RecurrenceSeries", fields: [recurrenceParentId], references: [id], onDelete: SetNull)
  recurrenceChildren Booking[] @relation("RecurrenceSeries")

  googleEventId String?
  meetingUrl    String?

  // Custom question answers (JSON object {questionId: answer})
  customAnswers String?
  // Screening question answers (JSON object {questionId: answer})
  screeningAnswers String?

  // Book on behalf: who booked this meeting (if different from guest)
  bookedByName  String?
  bookedByEmail String?
  // Payment
  stripePaymentIntentId String?
  paymentStatus         String? // "pending", "paid", "refunded"

  reminderEmailSent    Boolean @default(false)
  postMeetingEmailSent Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([hostId])
  @@index([eventTypeId])
  @@index([startTime])
  @@index([endTime])
  @@index([recurrenceParentId])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  PENDING_RESCHEDULE
}

enum LocationType {
  IN_PERSON
  GOOGLE_MEET
  ZOOM
  PHONE
  CUSTOM
}

enum SchedulingType {
  INDIVIDUAL
  ROUND_ROBIN
  COLLECTIVE
}

enum TeamMemberRole {
  OWNER
  ADMIN
  MEMBER
}

model Team {
  id          String   @id @default(cuid())
  name        String
  slug        String
  description String?
  logoUrl     String?
  ownerId     String
  owner       User     @relation("teamOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  // Round-robin tracking
  lastAssignedMemberId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members    TeamMember[]
  eventTypes EventType[]  @relation("teamEventTypes")

  @@unique([ownerId, slug])
  @@index([ownerId])
}

model TeamMember {
  id        String         @id @default(cuid())
  teamId    String
  team      Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId    String
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      TeamMemberRole @default(MEMBER)

  // For round-robin priority/weighting
  priority  Int            @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
}

model Webhook {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  url       String
  events    String[]
  secret    String
  active    Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deliveries WebhookDelivery[]

  @@index([userId])
}

model WebhookDelivery {
  id           String   @id @default(cuid())
  webhookId    String
  webhook      Webhook  @relation(fields: [webhookId], references: [id], onDelete: Cascade)

  event        String
  payload      Json
  status       DeliveryStatus @default(PENDING)
  responseCode Int?
  responseBody String?  @db.Text
  attempts     Int      @default(0)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([webhookId])
  @@index([createdAt])
}

enum DeliveryStatus {
  PENDING
  SUCCESS
  FAILED
}

model PageView {
  id          String   @id @default(cuid())
  eventTypeId String
  eventType   EventType @relation(fields: [eventTypeId], references: [id], onDelete: Cascade)
  
  // Funnel stage: view, slot_selected, booking_confirmed
  stage       String   @default("view")
  
  // Optional session tracking
  sessionId   String?
  
  createdAt   DateTime @default(now())

  @@index([eventTypeId])
  @@index([createdAt])
  @@index([stage])
}

model MeetingPoll {
  id            String       @id @default(cuid())
  title         String
  description   String?
  duration      Int          // minutes
  timezone      String
  createdBy     String
  creator       User         @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  options       PollOption[]
  votes         PollVote[]
  status        String       @default("open") // open, closed, booked
  finalOptionId String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([createdBy])
}

model PollOption {
  id        String      @id @default(cuid())
  pollId    String
  poll      MeetingPoll @relation(fields: [pollId], references: [id], onDelete: Cascade)
  startTime DateTime
  endTime   DateTime
  votes     PollVote[]

  @@index([pollId])
}

model PollVote {
  id           String      @id @default(cuid())
  pollId       String
  poll         MeetingPoll @relation(fields: [pollId], references: [id], onDelete: Cascade)
  optionId     String
  option       PollOption  @relation(fields: [optionId], references: [id], onDelete: Cascade)
  voterName    String
  voterEmail   String
  availability String      // "yes", "maybe", "no"
  createdAt    DateTime    @default(now())

  @@unique([optionId, voterEmail])
  @@index([pollId])
}

// ── Workflow Automations ──

enum WorkflowTrigger {
  BOOKING_CREATED
  BOOKING_CANCELLED
  BOOKING_RESCHEDULED
  BEFORE_MEETING
  AFTER_MEETING
}

enum WorkflowAction {
  SEND_EMAIL
  SEND_WEBHOOK
  WAIT
}

enum WorkflowExecutionStatus {
  RUNNING
  COMPLETED
  FAILED
}

enum WorkflowStepRunStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  SKIPPED
}

model Workflow {
  id        String          @id @default(cuid())
  userId    String
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  isActive  Boolean         @default(true)
  trigger   WorkflowTrigger

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  steps      WorkflowStep[]
  executions WorkflowExecution[]

  @@index([userId])
  @@index([userId, trigger])
}

model WorkflowStep {
  id         String         @id @default(cuid())
  workflowId String
  workflow   Workflow        @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  order      Int
  action     WorkflowAction
  config     Json           // For SEND_EMAIL: {subject, body}, SEND_WEBHOOK: {url, method, headers}, WAIT: {}
  delay      Int            @default(0) // delay in minutes before executing this step

  @@index([workflowId])
  @@unique([workflowId, order])
}

model WorkflowExecution {
  id         String                  @id @default(cuid())
  workflowId String
  workflow   Workflow                @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  bookingId  String
  status     WorkflowExecutionStatus @default(RUNNING)
  error      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stepRuns WorkflowStepRun[]

  @@index([workflowId])
  @@index([bookingId])
}

model WorkflowStepRun {
  id          String               @id @default(cuid())
  executionId String
  execution   WorkflowExecution    @relation(fields: [executionId], references: [id], onDelete: Cascade)
  stepOrder   Int
  action      WorkflowAction
  status      WorkflowStepRunStatus @default(PENDING)
  scheduledAt DateTime             // when this step should execute
  executedAt  DateTime?
  error       String?

  @@index([executionId])
  @@index([status, scheduledAt])
}

model RoutingForm {
  id                  String             @id @default(cuid())
  title               String
  description         String?
  userId              String
  user                User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  fields              RoutingFormField[]
  rules               RoutingRule[]
  fallbackEventTypeId String?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@index([userId])
}

model RoutingFormField {
  id       String      @id @default(cuid())
  formId   String
  form     RoutingForm @relation(fields: [formId], references: [id], onDelete: Cascade)
  label    String
  type     String
  required Boolean     @default(true)
  options  String?
  order    Int         @default(0)

  @@index([formId])
}

model RoutingRule {
  id          String      @id @default(cuid())
  formId      String
  form        RoutingForm @relation(fields: [formId], references: [id], onDelete: Cascade)
  fieldId     String
  operator    String
  value       String
  eventTypeId String
  order       Int         @default(0)

  @@index([formId])
}

model EmailSequence {
  id           String   @id @default(cuid())
  name         String
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  trigger      String   // "after_booking", "after_meeting", "no_show"
  delayMinutes Int      @default(60)
  subject      String
  body         String   @db.Text
  enabled      Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  logs         EmailSequenceLog[]

  @@index([userId])
}

model EmailSequenceLog {
  id         String        @id @default(cuid())
  sequenceId String
  sequence   EmailSequence @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  bookingId  String
  sentAt     DateTime      @default(now())

  @@unique([sequenceId, bookingId])
  @@index([sequenceId])
}
