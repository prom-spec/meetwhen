# Database (required)
DATABASE_URL="postgresql://user:password@localhost:5432/meetwhen?schema=public"

# NextAuth.js (required)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="<generate with: openssl rand -base64 32>"

# Google OAuth (required for login)
GOOGLE_CLIENT_ID="<your-google-client-id>.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="<your-google-client-secret>"

# Email - Option 1: Resend (recommended)
RESEND_API_KEY="<your-resend-key>"
EMAIL_FROM="MeetWhen <noreply@yourdomain.com>"

# Email - Option 2: SMTP (alternative)
# EMAIL_SERVER_HOST="smtp.example.com"
# EMAIL_SERVER_PORT="587"
# EMAIL_SERVER_USER="your-email@example.com"
# EMAIL_SERVER_PASSWORD="<your-password>"

# Cloudflare Workers AI - for chat assistant (optional)
CLOUDFLARE_ACCOUNT_ID="<your-cloudflare-account-id>"
CLOUDFLARE_AI_TOKEN="<your-cloudflare-ai-token>"

# MCP Server (optional - for AI integrations)
MCP_USER_ID="<user-id-for-mcp-server>"
